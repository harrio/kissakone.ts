extends layout

block content
  h1= title
  p Welcome to #{title}

  form(action="/gpioOn", method="POST", id="onForm", class="switchForm")
    input(type="submit", value="On", id="btnOn")
  form(action="/gpioOff", method="POST", id="offForm", class="switchForm")
    input(type="submit", value="Off", id="btnOff")

  div(id="result")